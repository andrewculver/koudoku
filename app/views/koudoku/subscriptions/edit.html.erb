<% if params['update'] == 'card' %>
  <%= render 'card', title: t('koudoku.payment.update_payment_information'), url: koudoku.owner_subscription_path(@owner, @subscription) %>
<% else %>
  <h1><%= t('koudoku.subscriptions.which_plan_is_best') %></h1>
  <%= render 'pricing_table' %>
  <p><%= t('koudoku.subscriptions.cancel_your_subscription_note_html', :link => (link_to t('koudoku.subscriptions.cancel_your_subscription'), koudoku.cancel_owner_subscription_path(@owner, @subscription), method: :post)) %></p>
<% end %>
